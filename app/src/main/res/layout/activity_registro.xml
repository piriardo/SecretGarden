<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/login_bg"
tools:context="com.example.andres.secretgarden.Registro">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/verImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Ruta imagen"
            android:gravity="center"
            android:id="@+id/txtRuta"
            />

        <EditText
            android:id="@+id/txtRut"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su Rut"
            android:background="#b7b9b3b3"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            />
        <EditText
            android:id="@+id/txtEmail"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su Email"
            android:background="#b7b9b3b3"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            />


        <EditText
            android:id="@+id/txtPass"
            android:drawableLeft="@drawable/pass_log_24dp"
            android:drawableTint="@android:color/white"
            android:drawablePadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mas de 8 caracteres"
            android:inputType="textPassword"
            android:background="#b7b9b3b3"
            android:layout_marginTop="15dip"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"/>
        <EditText
            android:id="@+id/txtPass2"
            android:drawableLeft="@drawable/pass_log_24dp"
            android:drawableTint="@android:color/white"
            android:drawablePadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repetir Password"
            android:inputType="textPassword"
            android:background="#b7b9b3b3"
            android:layout_marginTop="15dip"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"/>

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#CE93D8"
            android:text="A volar!"
            android:id="@+id/btnRegistrar"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>
